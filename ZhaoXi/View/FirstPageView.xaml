        <UniformGrid Columns="4">
            <Border CornerRadius="5" Background="White" Margin="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="50" Opacity="0.7" Direction="270" ShadowDepth="10"/>
                </Border.Effect>
                <Grid>
                    <lvc:CartesianChart Margin="0,0,0,45">
                    <lvc:CartesianChart.Series>
                        <lvc:LineSeries Stroke="#FF7261" Fill="#FFE3E0" PointGeometrySize="0"
                                        Values="1,25,3,80,37,6,70"/>
                    </lvc:CartesianChart.Series>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis ShowLabels="False"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis ShowLabels="False" MinValue="0" MaxValue="100"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15" Orientation="Horizontal">
                        <Border Width="20" Height="20" Background="#EDFAF0" CornerRadius="5">
                            <TextBlock Text="图标" FontSize="5" VerticalAlignment="Center" HorizontalAlignment="Center" />
