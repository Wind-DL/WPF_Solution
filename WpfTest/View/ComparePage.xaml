<UserControl x:Class="WpfTest.View.Compare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTest.View"
            xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:lvcs="clr-namespace:LiveCharts;assembly=LiveCharts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="ColorBrush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Red" Offset="0.024"/>
            <GradientStop Color="#FFA40BE4" Offset="0.938"/>
            <GradientStop Color="#FFA29205" Offset="0.187"/>
            <GradientStop Color="#FFF3F405" Offset="0.378"/>
            <GradientStop Color="#FF04ED30" Offset="0.53"/>
            <GradientStop Color="#FE0A7DE8" Offset="0.653"/>
            <GradientStop Color="#FE0B16E8" Offset="0.791"/>
        </LinearGradientBrush>

    </UserControl.Resources>
    <Grid>
        <TextBlock Text="稼动率对比" FontSize="25"
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Foreground="{DynamicResource ColorBrush}"/>

    </Grid>
</UserControl>
